{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": "^([a-z][a-zA-Z0-9]*)(-[a-z0-9]+)*$",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "define-mixin",
          "mixin"
        ]
      }
    ],
    "value-no-vendor-prefix": [ 
      true, 
      {
        "ignoreValues" : ["box"]
      }
    ]
  }
}
