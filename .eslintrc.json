{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "import",
        "@typescript-eslint",
        "prettier",
        "react",
        "react-hooks"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "alias": {
          "map": [
            ["@", "./src"],
            ["@components", "./src/components"],
            ["@pages", "./src/pages"],
            ["@utils", "./src/utils"],
            ["@assets", "./src/assets"],
            ["@redux", "./src/redux"],
            ["@typings", "./typings"]
          ],
          "extensions": [".tsx", ".ts"]
        }
      }
    },
    "rules": {
      "react/prop-types": 0,
      "prettier/prettier": [2, {"singleQuote": true}],
      "react-hooks/exhaustive-deps": 2
    },
    "overrides": [
      {
        "files": ["src/sw.js"],
        "rules": {
          "@typescript-eslint/no-var-requires": 0,
          "no-undef": 0
        }
      }
    ]
}
